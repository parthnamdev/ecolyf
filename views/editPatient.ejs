<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Patient</title>
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <div class="custom-padding">

      <a class="brand" href="/">Ecolyf</a>
        <h1 class="mb-4 large-top-margin">Patient Details</h1>
      <form action="/update" method="post" class="row" id="patient-form">
        <div class="mb-3 col-lg-4 col-md-6">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= patient.name %>" required>
        </div>
        <div class="col-lg-4 col-md-6">
          <label for="gender" class="form-label">Gender</label>
          <select class="form-select" aria-label="Default select example" value="<%= patient.gender %>" id="gender" name="gender" required>
            <option value="0" selected disabled></option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option> 
          </select>
        </div>
        <div class="mb-3 col-lg-4 col-md-6">
          <label for="dob" class="form-label">Date of birth</label>
          <input type="dob" class="form-control" id="dob" name="dob" value="<%= patient.dob %>" required>
        </div>
        <div class="mb-3 col-lg-4 col-md-6">
          <label for="number" class="form-label">WhatsApp Numebr</label>
          <input type="number" class="form-control" id="number" name="number" value="<%= patient.number %>" min="1000000000" max="9999999999" required>
        </div>
        <div class="mb-3 col-lg-4 col-md-6">
            <label for="city" class="form-label">City</label>
            <input type="text" class="form-control" id="city" value="<%= patient.city %>" name="city" required>
          </div>
          <div class="mb-3 col-lg-4 col-md-6">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" id="country" value="<%= patient.country %>" name="country" required>
          </div>
        <div class="mb-3 col-lg-4 col-md-6">
          <label for="symptoms" class="form-label">Symptoms</label>
          <textarea class="form-control" id="symptoms" name="symptoms" rows="3" required><%= patient.symptoms.join(',') %></textarea>
        </div>
        
        <input type="hidden" id="gen" value="<%= patient.gender %>">
        <input type="hidden" name="id" value="<%= patient._id %>">
      </div>
      <a href="/" role="button" class="btn btn-lg btn-outline-dark">Back</a>
      <button type="submit" class="btn btn-lg btn-outline-primary">Submit</button>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        $(window).ready(() => {
            let gen = document.getElementById("gen").value;
            document.getElementById("gender").value = gen;
            
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>